<% include includes/header %>

<div class="container">
<div class="col-sm-6 bg-yellow">
 <form class="post blastForm" action="/post" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
            <label>Subject</label>
            <input type="text" id="subject" class="form-control" name="subject">
        </div>
      
     
        <button type="submit" class="blast btn btn-warning btn-lg">Post New Blast</button>
    </form>

 
    
    <div class= "post">
      <% for(var i=0; i<blasts.length; i++) {%>
        <div class="blasts">
          <h3><span><%= blasts[i].title %></span></h3>
          <h4><span><%= blasts[i].subject %></span></h4>
          <p><span>Author: <%= blasts[i].author %></span>   
          <span class="date">Date: <%= blasts[i].date %></span></p>

          <div class="comments"> <h4>Comments:</h4>
            <% for(var j=0; j<blasts[i].comments.length; j++) { %>
              <div class="comment"><h5><%= comments[blasts[i].comments[j]].subject %> - <%= comments[blasts[i].comments[j]].author %></h5>
              </div>
            <% } %>
          </div>

      <form class="form-inline" action="/comment" method="POST">
          <div class="form-group col-sm-8">
            <input type="hidden" name="blast_id" value="<%= blasts[i]._id%>">
            <input type="hidden" name="name">
            <input type="text" id="input" class="form-control input-sm " name="comment">
          </div>
          <div><button type="submit" class="btn btn-warning btn-sm">Comment</button></div>
      </form>
      </div>
      <% } %>
    </div>
</div>

